{
  "env": {
    "browser": false
  },
  "name": "@basketcol/core",
  "version": "1.0.2",
  "main": "build/main/index.js",
  "types": "build/types/index.d.ts",
  "files": [
  "build/**/*"
],
  "description": "Core domain package for basketCol project",
  "author": "Manuel Rivera - manuelh_ra",
  "extends": [
    "airbnb",
    "airbnb-typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": false
    },
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "import/no-extraneous-dependencies": "off",
    "class-methods-use-this": "off",
    "no-underscore-dangle": "off",
    "@typescript-eslint/naming-convention": "off",
    "linebreak-style": "off"
  },
  "scripts": {
    "tsc": "tsc --watch",
    "start:dev": "cross-env NODE_ENV=development ts-node-dev --ignore-watch node_modules ./src/main"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/convict": "^6.1.6",
    "@types/errorhandler": "^1.5.3",
    "@types/express": "^4.17.21",
    "@types/uuid": "^9.0.8",
    "@types/uuid-validate": "^0.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.43.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-plugin-import": "^2.29.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "awilix": "^10.0.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "convict": "^6.2.4",
    "errorhandler": "^1.5.1",
    "express": "^4.19.2",
    "express-promise-router": "^4.1.1",
    "glob": "^11.0.0",
    "helmet": "^7.1.0",
    "mongoose": "^8.5.2",
    "uuid": "^10.0.0",
    "uuid-validate": "^0.0.3"
  }
}
